@model IEnumerable<trimatrixlab.Models.EducationModel>



<section id="education" class="section">
    <div class="container">
        <div class="section-title">
            <h4 class="text-uppercase text-center"><img src="/Content/images/book.png" alt="demo">Education</h4>
        </div>

        <div id="timeline-education">
            @foreach (var item in Model)
            {
                <div class="timeline-block">
                    
                    <div class="timeline-dot">
                        <h6>@item.TieuDe.Substring(0, 1)</h6>
                    </div>
                    <div class="card timeline-content">
                        <div class="card-content">
                            <h6 class="timeline-title">@item.TieuDe</h6>
                            <div class="timeline-info">
                                <h6>
                                    <small>@Html.Raw(@item.TieuDeCon)</small>
                                </h6>
                                <h6>
                                    <small>
                                        @item.NgayBatDau.Value.ToString("MMM yyyy") - @item.NgayKetThuc.Value.ToString("MMM yyyy")

                                    </small>
                                </h6>
                            </div>
                            <p>
                                @Html.Raw(@item.MoTa)
                            </p>
                            <a href="#" class="modal-dot" data-toggle="modal" data-target="#myModal-@item.IDEducation">
                                <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</section>



