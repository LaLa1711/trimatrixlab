@model IEnumerable<trimatrixlab.Models.ExperienceModel>



<section id="experience" class="section">
    <div class="container">
        <!-- SECTION TITLE -->
        <div class="section-title">
            <h4 class="text-uppercase text-center"><img src="/Content/images/layers.png" alt="demo">Experience</h4>
        </div>

        <div id="timeline-experience">

            @foreach (var item in Model)
            {
                <div class="timeline-block">
                    <!-- DOT -->
                    <div class="timeline-dot"><h6>@item.TieuDe.Substring(0, 1)</h6></div>
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="card-content">
                            <!-- TIMELINE TITLE -->
                            <h6 class="timeline-title">@item.TieuDe</h6>
                            <!-- TIMELINE TITLE INFO -->
                            <div class="timeline-info">
                                <h6>
                                    <small>@Html.Raw(@item.TieuDeCon)</small>
                                </h6>
                                <h6>
                                    <small>
                                        @item.NgayBatDau.Value.ToString("MMM yyyy") - @item.NgayKetThuc.Value.ToString("MMM yyyy")
                                    </small>
                                </h6>
                            </div>
                            <!-- TIMELINE PARAGRAPH -->
                            <p>
                                @Html.Raw(@item.MoTa)
                            </p>
                            <!-- BUTTON TRIGGER MODAL -->
                            <a href="#" class="modal-dot" data-toggle="modal" data-target="#myModal1-@item.IDExperience">
                                <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


