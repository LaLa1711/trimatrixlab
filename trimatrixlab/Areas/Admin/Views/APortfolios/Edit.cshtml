@model trimatrixlab.DBContext.tbPortfolio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Edit</h2>
<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ ẢNH</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh Sửa THÔNG TIN ẢNH</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/APortfolios/edit" method="post" enctype="multipart/form-data">
                            @Html.HiddenFor(model => model.IDPortfolio)
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Chọn Nhóm ẢNH</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="IDGrPortfolio">
                                        @Html.Raw(Html.Action("GetPort", "APortfolios", new { id = Model.IDGrPortfolio }))
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tiêu Đề</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.TieuDe" name="TieuDe" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Hình Ảnh</label>
                                <div class="col-sm-10">
                                    <img src="@Model.Image" width="180" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Cập Nhật Hình Ảnh</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" name="EditHinhAnh" id="formFile">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tên ẢNH</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.Portfolio" name="Portfolio" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Link</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="Link" value="@Model.Link" />
                                </div>
                            </div>
                            @*Cách 1*@
                            @*<div class="row mb-3">
                                    @Html.LabelFor(model => model.Hide, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.Hide)
                                            @Html.ValidationMessageFor(model => model.Hide, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>*@

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Trạng Thái</label>
                                <div class="col-sm-2">
                                    <select id="hideSelect" class="form-select" name="Hide" aria-label="Default select example">
                                        <option value="default">Select...</option>
                                        <option value="true">True</option>
                                        <option value="false">False</option>
                                    </select>
                                </div>
                            </div>

                            <script>
                                const currentValue = "@(Model.Hide?.ToString().ToLower() ?? "default")";
                                const hideSelect = document.getElementById('hideSelect');
                                if (currentValue === "true") {
                                    hideSelect.value = "true";
                                } else if (currentValue === "false") {
                                    hideSelect.value = "false";
                                } else {
                                    hideSelect.value = "default";
                                }
                            </script>

                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                                    <a href="/admin/APortfolios" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>



</main>
