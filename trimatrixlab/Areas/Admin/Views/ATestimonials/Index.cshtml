@model IEnumerable<trimatrixlab.DBContext.tbTestimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ ĐÁNH GIÁ</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH ĐÁNH GIÁ</h5>
                        <a class="btn btn-success" href="/admin/ATestimonials/create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>
                                <th>
                                    Tên
                                </th>
                                <th>
                                    Tiêu Đề
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.HinhAnh" width="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td style="padding-left: 30px;">
                                    @if (item.Hide != true)
                                    {
                                        <p>Hiện</p>
                                    }
                                    else
                                    {
                                        <p>   ẨN </p>
                                    }
                                </td>
                                <td>
                                    <a href="/admin/ATestimonials/edit/@item.IDTestimonial"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/admin/ATestimonials/details/@item.IDTestimonial"><i class="ri-article-line"></i></a> |
                                    <a href="/admin/ATestimonials/delete/@item.IDTestimonial"><i class="ri-delete-bin-6-line"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>
