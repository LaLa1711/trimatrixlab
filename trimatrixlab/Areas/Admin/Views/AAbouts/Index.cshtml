@model IEnumerable<trimatrixlab.DBContext.tbAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ GIỚI THIỆU CHUNG</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH GIỚI THIỆU</h5>
                        <a class="btn btn-success" href="/admin/AAbouts/create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>
                                <th>
                                    Poster
                                </th>
                                <th>
                                    Tên
                                </th>
                                <th>
                                    Link
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Image" width="100" />
                                </td>
                                <td>
                                    <img src="@item.Poster" width="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a href="@item.Link" target="_blank">XEM!!!</a>
                                </td>
                                <td>
                                    <a href="/admin/AAbouts/edit/@item.IDAbout"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/admin/AAbouts/details/@item.IDAbout"><i class="ri-article-line"></i></a> |
                                    <a href="/admin/AAbouts/delete/@item.IDAbout"><i class="ri-delete-bin-6-line"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>

