@model trimatrixlab.DBContext.tbAbout

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ GIỚI THIỆU CHUNG</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"> THÔNG TIN GIỚI THIỆU</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/AAbouts/edit/@Model.IDAbout" method="post" enctype="multipart/form-data">

                            @Html.HiddenFor(model => model.IDAbout)
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Hình Ảnh</label>
                                <div class="col-sm-10">
                                    <img src="@Model.Image" width="180" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Họ Tên</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.Name)
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Nội Dung</label>
                                <div class="col-sm-10">
                                    <div class="form-control" rows="5">
                                        @Html.Raw(Model.Contents)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.Email)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Web</label>
                                <div class="col-sm-10">
                                    <a href="@Model.Web" class="form-control" target="_blank">@Model.Web</a>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Địa Chỉ</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.Address)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Điện Thoại</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.Phone)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Thời Gian</label>
                                <div class="col-sm-10">
                                    @if (Model.DateOfBirth.HasValue) // Kiểm tra xem ThoiGian có giá trị hay không
                                    {
                                        <span class="form-control">@Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="form-control">Không có thời gian</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Mô Tả</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.Descriptions)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Zip Code</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.ZipCode)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Link Bài Viết</label>
                                <div class="col-sm-10">
                                    <a href="@Model.Link" class="form-control" target="_blank">@Model.Link</a>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Mô Tả Sở Thích</label>
                                <div class="col-sm-10">
                                    <div class="form-control" rows="5">
                                        @Html.Raw(Model.MoTaInterest)
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Poster</label>
                                <div class="col-sm-10">
                                    <img src="@Model.Poster" width="180" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <a href="/admin/aabouts" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>
